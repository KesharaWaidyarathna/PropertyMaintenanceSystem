@model PropertyMaintenance.Modles.Maintenance

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="container py-3">
        <div class="title h1 text-center">Maintenance Details</div>
        <!-- Card Start -->
        <div class="card">
            <div class="row ">

                <div class="col-md-7 px-3">
                    <div class="card-block px-6">
                        <h4 class="card-title">@Html.DisplayNameFor(model => model.EventName) </h4>
                        <p class="card-text">
                            @Html.DisplayFor(model => model.CreatedDate)
                            <br />
                            @Html.DisplayFor(model => model.PropertyName)
                        </p>
                        <p class="card-text">@Html.DisplayNameFor(model => model.Description)</p>
                        <br>
                    </div>
                </div>
                <!-- Carousel start -->
                <div class="col-md-5">
                    <div id="CarouselTest" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                    @if (Model.Image != null)
                                    {
                                        <img class="postcard__img" src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Image Title" height="400" width="550" />
                                    }
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
                <!-- End of carousel -->
            </div>
        </div>
        <!-- End of card -->
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>